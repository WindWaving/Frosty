<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Card">
        <item name="android:background">@drawable/round_card</item>
        <item name="android:textColor">@color/cardYiyanText</item>
        <item name="android:elevation">2dp</item>
    </style>
<!--    toolbar menu theme-->
    <style name="MenuPopTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:colorBackground">@color/toolbarTitle</item>  <!-- background color -->
        <item name="overlapAnchor">false</item>  <!--menu below the toolbar-->
        <item name="actionOverflowButtonStyle">@style/MenuIconStyle</item><!--menu icon setting-->
    </style>
<!--    menu icon-->
    <style name="MenuIconStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/settings</item>
    </style>
</resources>
