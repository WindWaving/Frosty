<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/topBarHgt"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:onClick="toLoginPage"/>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/picHgt"
        android:background="@drawable/pick_title"
        android:layout_marginBottom="@dimen/picBelow"
         />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/account_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_margin="@dimen/cCardMargin"
                android:layout_width="@dimen/myCardWidth"
                android:layout_height="@dimen/myCardHgt"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/mine_card2"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/account"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/fav_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_margin="@dimen/cCardMargin"
                android:layout_width="@dimen/myCardWidth"
                android:layout_height="@dimen/myCardHgt"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/mine_card2"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/favorites"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/mine_create_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_margin="@dimen/cCardMargin"
                android:layout_width="@dimen/myCardWidth"
                android:layout_height="@dimen/myCardHgt"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/mine_card2"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/mine_creation"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>