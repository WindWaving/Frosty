    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/picHgt"
        android:background="@drawable/pick_title"
        android:layout_marginBottom="@dimen/picBelow"
        android:contentDescription="title" />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/word_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_margin="@dimen/cCardMargin"
                android:layout_width="@dimen/cCardWidth"
                android:layout_height="@dimen/cCardHgt"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/cardbkg"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/yiyan"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/topic_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_width="@dimen/cCardWidth"
                android:layout_height="@dimen/cCardHgt"
                android:layout_margin="@dimen/cCardMargin"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/cardbkg"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/topic"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/music_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_width="@dimen/cCardWidth"
                android:layout_height="@dimen/cCardHgt"
                android:layout_margin="@dimen/cCardMargin"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/cardbkg"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/music"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/image_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_width="@dimen/cCardWidth"
                android:layout_height="@dimen/cCardHgt"
                android:layout_margin="@dimen/cCardMargin"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/cardbkg"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/image"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
            <com.wind.frosty.composites.CardComponent
                android:id="@+id/docs_card"
                android:clickable="true"
                android:padding="@dimen/cCardPad"
                android:layout_width="@dimen/cCardWidth"
                android:layout_height="@dimen/cCardHgt"
                android:layout_margin="@dimen/cCardMargin"
                android:foreground="?attr/selectableItemBackground"
                custom:alpha="@dimen/cCardAlpha"
                custom:backgrd="@drawable/cardbkg"
                custom:cirImg="@drawable/pick_title"
                custom:cirSize="@dimen/cCardPic"
                custom:title="@string/docs"
                custom:cirImgMTop="@dimen/cCardPicMTop"
                custom:cirImgMBot="@dimen/cCardPicMBot"
                />
        </LinearLayout>
    </HorizontalScrollView>

