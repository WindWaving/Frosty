<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fixCardHgtS"
    android:paddingHorizontal="@dimen/itemSidePad"
    android:paddingVertical="@dimen/itemUdPad"
    android:orientation="vertical"
    android:background="@drawable/round_card"
    android:layout_marginVertical="@dimen/myCardVertical"
    android:layout_marginHorizontal="@dimen/myCardHorizental"
    >
    <LinearLayout
        android:id="@+id/music_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/music_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/m_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/m_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/pre_music"/>

            <TextView
                android:id="@+id/m_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/pre_music_word"
                android:textSize="16sp"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/music_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/music_on"
            android:scaleType="centerInside"
            android:focusable="false"
            android:clickable="true"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/like_icon"
            android:layout_width="@dimen/likeSize"
            android:layout_height="@dimen/likeSize"
            android:src="@drawable/like"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/like_cnt"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="@dimen/likeFont"
            android:layout_toLeftOf="@id/fav_icon"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/fav_icon"
            android:layout_width="@dimen/likeSize"
            android:layout_height="@dimen/likeSize"
            android:src="@drawable/fav"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>