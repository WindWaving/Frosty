<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/mu_detail_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/muDetCardH"
            android:background="@color/gradienBtnStart"
            android:paddingHorizontal="30dp"
            android:paddingVertical="40dp">
            <TextView
                android:id="@+id/music_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_content"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <ImageButton
            android:layout_width="@dimen/muDetPlayBtn"
            android:layout_height="@dimen/muDetPlayBtn"
            android:src="@drawable/add_pic"
            android:layout_marginTop="@dimen/muDetPlayBtnUp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:layout_marginEnd="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:layout_width="@dimen/muIconSize"
                android:layout_height="@dimen/muIconSize"
                android:src="@drawable/fav"
                android:scaleType="fitXY"
                />
            <ImageButton
                android:layout_width="@dimen/muIconSize"
                android:layout_height="@dimen/muIconSize"
                android:src="@drawable/fav"
                android:layout_marginHorizontal="20dp"
                android:scaleType="fitXY"
                />
            <ImageButton
                android:layout_width="@dimen/muIconSize"
                android:layout_height="@dimen/muIconSize"
                android:src="@drawable/fav"
                android:scaleType="fitXY"
                />
        </LinearLayout>
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>