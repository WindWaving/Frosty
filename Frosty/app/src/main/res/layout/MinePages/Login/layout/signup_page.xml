<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/loginCardWdt"
    android:layout_height="@dimen/loginCardHgt"
    xmlns:app="http://schemas.android.com/tools"
    custom:cardElevation="3dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/loginCardY"
    custom:cardBackgroundColor="@color/gradienBtnStart">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_arrow"
        android:layout_gravity="end"
        android:onClick="toggleSign"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textSize="@dimen/loginTitleFont"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/loginTitleTop"/>
    <LinearLayout
        android:layout_width="@dimen/formWdt"
        android:layout_height="@dimen/formHgt"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/loginTitleBot"
        android:padding="@dimen/outerPad"
        android:orientation="vertical"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nickname"
            app:startIconDrawable="@drawable/settings"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            app:startIconDrawable="@drawable/settings"
            android:layout_marginTop="@dimen/inputDis"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwd"
            app:startIconDrawable="@drawable/settings"
            android:layout_marginTop="@dimen/inputDis"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/repeat"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/settings"
            android:layout_marginTop="@dimen/inputDis"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>