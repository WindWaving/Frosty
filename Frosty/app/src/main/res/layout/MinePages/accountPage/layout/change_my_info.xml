<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:navigationIcon="@mipmap/back_arrow">
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/my_modify_avatar_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/makeMyAvatarCardH"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/gradienBtnStart"
            >
            <ImageView
                android:id="@+id/my_modify_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cardbkg"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/outerPad"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_below="@id/my_modify_avatar_card"
            android:layout_width="@dimen/makeMyinfoCardW"
            android:layout_height="@dimen/makeMyinfoCardH"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/myinfoCard"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/outerPad"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nickname"
                    android:textColorHint="@color/myinfoFont">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myinfoFont"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_pass"
                    android:textColorHint="@color/myinfoFont">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myinfoFont"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/repeat"
                    android:textColorHint="@color/myinfoFont">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myinfoFont"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone"
                    android:textColorHint="@color/myinfoFont">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myinfoFont"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <Button
            android:layout_width="@dimen/makeMybtn"
            android:layout_height="@dimen/makeMybtn"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_circle"
            android:layout_centerHorizontal="true"
            android:text="保存"
            android:onClick="toSaveMyInfo"/>
    </RelativeLayout>
</LinearLayout>